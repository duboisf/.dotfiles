[push]
	default = simple
[user]
	email = 169247+duboisf@users.noreply.github.com
	name = Fred Dubois
	signingkey = EAD1C56184229C79E576B6255EECC8A93659FC0D
[alias]
	auto-pr-merge = !gh pr merge --auto --merge
	# Prevent annoying 'Opening in existing browser session.' message
	browse = !bash -c 'gh browse &> /dev/null'
	co = checkout
	cp = cherry-pick
    fp = fetch --prune
	gclone = !gh repo clone
	lp = log -p
	pfh = push -u duboisf HEAD
	poh = push -u origin HEAD
	pr-merge = !gh pr merge --merge --delete-branch && git pull --prune
	prv = !gh pr view
	create-branch = !bash -c 'git switch -c fd/'$1
[commit]
	verbose = true
	gpgsign = true
[pull]
	rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pager]
	branch = no
[diff]
	compactionHeuristic = true
	submodule = log
[init]
	defaultBranch = main
[core]
	pager = less -F -X
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential
[fetch]
	pruneTags = true

[include]
    path = ~/.gitconfig.local
